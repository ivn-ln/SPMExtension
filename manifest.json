{
    "manifest_version": 3,
    "name": "SPM Helper Extension",
    "description": "Remembers passwords on websites you use to open them on your SPM client",
    "author": "illarn@ya.ru",
    "permissions": ["storage", "tabs"],
    "version": "0.1",
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["contentScript.js"]
        }
    ]
}
